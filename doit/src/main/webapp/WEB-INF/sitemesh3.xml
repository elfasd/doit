<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
    <mapping path="/*" decorator="/layout/frame.jsp" />
    <!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
    <mapping path="/bs/*.html" exclue="true" />
    <mapping path="/bs/pdf/generic/web/viewer.html" exclue="true" />
    <mapping path="/login.*" exclue="true" />
    <mapping path="*/login.jsp" exclue="true" />
</sitemesh>